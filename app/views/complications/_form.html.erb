
<h4><%= field.label "Add Complication/s: Scroll and select all applicable ones", class: "text-success" %></h4>
<h6> Use <b>CMD-Click</b> or <b>CTRL-Click</b> to select from existing list </h6>
<%= collection_select(:complications, :id, Complication.order(:complication_name), :id, :complication_name, {}, {:multiple => true}) %>

<h4 class="text-success"> Add a New Complication </h4>

<%= field.fields_for :complications, Complication.new do |fields| %>
    <%= fields.label :complication_name %>
    <%=fields.text_field :complication_name %>
    <%= fields.label :complication_description %>
    <%=fields.text_field :complication_description %>
<% end %>

