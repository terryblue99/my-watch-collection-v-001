
<div class="col-sm-8">

	<div>
	  <% if @watches.size > 0 %>


			<% if session[:find_maker] == "yes" %>
		    	<h4 style="text-indent: 4em;">One of My Watch Makers [<%= @watches_for_display %>]</h4>
		    	<% session[:find_maker] = "no" %>
		    <% elsif %>
				<% session[:most_maker] == "yes" %>
		    	<h4 style="text-indent: 4em;">The Maker of Most of My Watches [<%= @watches_for_display %>]</h4>
		    	<% session[:most_maker] = "no" %>
		    <% elsif %>
				<% session[:newest_watches] == "yes" %>
		    	<h4 style="text-indent: 4em;">My 10 Newest Watches</h4>
		    	<% session[:newest_watches] = "no" %>
		    <% else %>
		    	<h4 style="text-indent: 4em;">All of My Watches [<%= @watches_for_display %>]</h4>
		    <% end %>
			
	      	<div class="watches"> 
	          	<%= render "load_watches" %>
	      	</div>

	      	<div class="watches_paginate">
	         	<%= render "paginate" %>
	        </div>
		 
		 <%else%>	
		    <h4 class="text-danger"><b>There are currently no watches to display!</b></h4>
		<%end%>
	</div>

	<div class="row">
	    <div class="col-sm-8 text-center">
			
	      <%if @watches_for_display && @watches_for_display > session[:watches_on_page] %>
			<!-- input box and submit button to change number of watches on a page -->
	        <%= form_tag rows_path(current_user), method: :get do %>
	          <b class="text-success">Watches on a page:</b> <input  type="number" id="rows" name="rows" min="1" max="50">
	          <button class="btn btn-primary btn btn-sm">submit</button>
	        <%end%>

	      <%end%>
	    </div>
  </div>

</div>