<body class="container bg-info">
  <div class="row">    
    <div class="col-sm-10"> 

	    <div style="text-indent: 25em;">
			<h4 class="text-success">One of my watches</h4>
			<h5 style="text-indent: 25em;">Name: <b><%=@watch.name%></b></h5>
			<h5 style="text-indent: 25em;">Maker: <b><%=@watch.maker%></b></h5>
			<h5 style="text-indent: 25em;">Movement: <b><%=@watch.movement%></b></h5>
			<h5 style="text-indent: 25em;">Band: <b><%=@watch.band%></b></h5>
			<h5 style="text-indent: 25em;">Model Number: <b><%=@watch.model_number%></b></h5>
			<h5 style="text-indent: 25em;">Water Resistance: <b><%=@watch.water_resistance%></b></h5>
			<h5 style="text-indent: 25em;">Date Bought: <b><%=@watch.date_bought%></b></h5>
			<br>
			<h4>Complications</h4>
			
				<% if !@watch.complications.empty? %>
					<% @watch.complications.each do |complication| %>
						<h5 style="text-indent: 25em;"><b><%=complication.name%></b></h5>
					<% end %>
				<% else %>
					<h5 style="text-indent: 25em;">There are no complications to display!</h5>	
				<% end %>
		
			<h5><%= link_to "Edit this Watch", edit_watch_path %></h5>
			<h5><%= link_to "Add a new watch", new_watch_path %></h5>
			<h5><%= link_to "Show all of my watches", watches_path %></h5>
			<h5><%= link_to 'Delete this watch', watch_path, method: :delete, data: { confirm: 'Are you sure?' } %></h5>
		</div>

    </div>
  </div>
 </body>
